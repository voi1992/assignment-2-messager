
<%= form_for :user, url: users_path,html:{class:"form-signin"} do |f| %>
    <h2 class="form-signin-heading">Sign up</h2>
    <%= f.label :username,nil, class:"sr-only" %>
    <%= f.text_field :username, class: "form-control", placeholder: "Full name" %>
    </br>
    <%= f.label :email ,nil, class:"sr-only" %>
    <%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
    </br>
    <%= f.label :password,nil, class:"sr-only"  %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </br>
    <%= f.label :password_confirmation ,nil, class:"sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
    </br>
    <%= f.submit "sign up" ,class:"btn btn-lg btn-primary btn-block"%>
<% end %>
