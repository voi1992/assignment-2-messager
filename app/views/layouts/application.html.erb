<!DOCTYPE html>
<html>
<head>
  <title>ChatApp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <nav class="navbar navbar-light bg-faded">
    <%= link_to "My Messages", root_path, class: "navbar-brand" %>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <% if !logged_in? %>
            <%= link_to "Create User", new_user_path, class: 'nav-link' %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if current_user %>
            <%= link_to "Log out", logout_path, method: :delete, class: 'nav-link' %>
        <% else %>
            <%= link_to "Log in", new_session_path, class: 'nav-link' %>
        <% end %>
      </li>
      <% if logged_in? %>
          <li class="nav-item dropdown" style="float: right">
            <a class="nav-link dropdown-toggle" href="http://example.com" id="supportedContentDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= current_user.username %></a>
            <div class="dropdown-menu" aria-labelledby="supportedContentDropdown">
              <a class="dropdown-item" href="<%=users_path %>">User list</a>
              <a class="dropdown-item" href="<%=users_path(friendlst:"1") %>">Friend list</a>

            </div>
          </li>
      <% end %>
    </ul>
  </nav>

  <%= yield %>
</div>
</body>
</html>
