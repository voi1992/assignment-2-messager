<%= form_tag sessions_path, method: :POST, class: "form-signin" do %>
    <h2 class="form-signin-heading">Sign in</h2>
    <%= label_tag :email, nil, class: "sr-only" %>
    <%= text_field_tag(:email, nil, class: "form-control", placeholder: "Email address") %>
    </br>
    <%= label_tag :password, nil, class: "sr-only" %>
    <%= password_field_tag(:password, nil, class: "form-control", placeholder: "Password") %>
    </br>
    <%= submit_tag(:submit, class: "btn btn-lg btn-primary btn-block") %>
<% end %>
